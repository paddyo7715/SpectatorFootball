                                            <Label Width="120" Style="{StaticResource Normsmllbltyle}">Number Outline:</Label>
                                            <xctk:ColorPicker Name="newtAwayNumberOutlineColor"  SelectedColor="{Binding Away_Jersey_Number_Outline_Color, Converter={StaticResource ColorConverter}}" DropDownBackground="White" MaxDropDownWidth="400" RecentColorsHeader="Team Colors"  ShowRecentColors="true"  SelectedColorChanged="newtAwayNumberOutlineColor_SelectedColorChanged"  Height="20"  Width="40" />
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" >
                                            <Label Width="110" Style="{StaticResource Normsmllbltyle}">Shoulder Loop:</Label>
                                            <xctk:ColorPicker Name="newtAwayShoulderStripeColor"  SelectedColor="{Binding Away_Jersey_Shoulder_Stripe, Converter={StaticResource ColorConverter}}" DropDownBackground="White" MaxDropDownWidth="400" RecentColorsHeader="Team Colors"  ShowRecentColors="true"  SelectedColorChanged="newtAwayShoulderStripeColor_SelectedColorChanged"  Height="20"  Width="40" />
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" >
                                            <Label Width="150" Style="{StaticResource Normsmllbltyle}">Sleeve Stripe Colors:</Label>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" >
                                            <Label Width="25" Style="{StaticResource Normsmllbltyle}">1:</Label>
                                            <xctk:ColorPicker Name="newtAwayJerseySleeve1Color"  SelectedColor="{Binding Away_Jersey_Sleeve_Stripe_Color_1, Converter={StaticResource ColorConverter}}" DropDownBackground="White" MaxDropDownWidth="400" RecentColorsHeader="Team Colors"  ShowRecentColors="true"  SelectedColorChanged="newtAwayJerseySleeve1Color_SelectedColorChanged"  Height="20"  Width="40" />
                                            <Label Width="25" Style="{StaticResource Normsmllbltyle}">2:</Label>
                                            <xctk:ColorPicker Name="newtAwayJerseySleeve2Color"  SelectedColor="{Binding Away_Jersey_Sleeve_Stripe_Color_2, Converter={StaticResource ColorConverter}}" DropDownBackground="White" MaxDropDownWidth="400" RecentColorsHeader="Team Colors"  ShowRecentColors="true"  SelectedColorChanged="newtAwayJerseySleeve2Color_SelectedColorChanged"  Height="20"  Width="40" />
                                            <Label Width="25" Style="{StaticResource Normsmllbltyle}">3:</Label>
                                            <xctk:ColorPicker Name="newtAwayJerseySleeve3Color"  SelectedColor="{Binding Away_Jersey_Sleeve_Stripe_Color_3, Converter={StaticResource ColorConverter}}" DropDownBackground="White" MaxDropDownWidth="400" RecentColorsHeader="Team Colors"  ShowRecentColors="true"  SelectedColorChanged="newtAwayJerseySleeve3Color_SelectedColorChanged"  Height="20"  Width="40" />
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal">
                                            <Label Width="25" Style="{StaticResource Normsmllbltyle}">4:</Label>
                                            <xctk:ColorPicker Name="newtAwayJerseySleeve4Color"  SelectedColor="{Binding Away_Jersey_Sleeve_Stripe_Color_4, Converter={StaticResource ColorConverter}}" DropDownBackground="White" MaxDropDownWidth="400" RecentColorsHeader="Team Colors"  ShowRecentColors="true"  SelectedColorChanged="newtAwayJerseySleeve4Color_SelectedColorChanged"  Height="20"  Width="40" />
                                            <Label Width="25" Style="{StaticResource Normsmllbltyle}">5:</Label>
                                            <xctk:ColorPicker Name="newtAwayJerseySleeve5Color"  SelectedColor="{Binding Away_Jersey_Sleeve_Stripe_Color_5, Converter={StaticResource ColorConverter}}" DropDownBackground="White" MaxDropDownWidth="400" RecentColorsHeader="Team Colors"  ShowRecentColors="true"  SelectedColorChanged="newtAwayJerseySleeve5Color_SelectedColorChanged"  Height="20"  Width="40" />
                                            <Label Width="25" Style="{StaticResource Normsmllbltyle}">6:</Label>
                                            <xctk:ColorPicker Name="newtAwayJerseySleeve6Color"  SelectedColor="{Binding Away_Jersey_Sleeve_Stripe_Color_6, Converter={StaticResource ColorConverter}}" DropDownBackground="White" MaxDropDownWidth="400" RecentColorsHeader="Team Colors"  ShowRecentColors="true"  SelectedColorChanged="newtAwayJerseySleeve6Color_SelectedColorChanged"  Height="20"  Width="40" />
                                        </StackPanel>
                                    </StackPanel>
                                </GroupBox>

                                <GroupBox Margin="2,2,2,2" FontSize="18" FontWeight="Bold" Foreground="White">
                                    <GroupBox.Header>
                                        Away Pants Colors:
                                    </GroupBox.Header>
                                    <StackPanel Orientation="Vertical">
                                        <StackPanel Orientation="Horizontal">
                                            <Label Width="70" Style="{StaticResource Normsmllbltyle}">Pants:</Label>
                                            <xctk:ColorPicker Name="newtAwayPantsColor"  SelectedColor="{Binding Away_Pants_Color, Converter={StaticResource ColorConverter}}" DropDownBackground="White" MaxDropDownWidth="400" RecentColorsHeader="Team Colors"  ShowRecentColors="true"  SelectedColorChanged="newtAwayPantsColor_SelectedColorChanged" Height="20" Width="40" />
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" >
