                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" >
                                            <Label Width="70" Style="{StaticResource Normsmllbltyle}">Number:</Label>
                                            <xctk:ColorPicker Name="newtHomeJerseyNumberColor"  SelectedColor="{Binding Home_Jersey_Number_Color, Converter={StaticResource ColorConverter}}" DropDownBackground="White" MaxDropDownWidth="400" RecentColorsHeader="Team Colors"  ShowRecentColors="true" SelectedColorChanged="newtHomeJerseyNumberColor_SelectedColorChanged"  Height="20"  Width="40" />
                                            <Label Width="120" Style="{StaticResource Normsmllbltyle}">Number Outline:</Label>
