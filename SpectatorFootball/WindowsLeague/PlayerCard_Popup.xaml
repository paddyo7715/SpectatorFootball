                                                <GridViewColumn Header="Pressures" Width="75" DisplayMemberBinding="{Binding Path=Regular_Season_Stats.Defense_Stats.Pressures}" />
                                                <GridViewColumn Header="Runs for Loss" Width="85" DisplayMemberBinding="{Binding Path=Regular_Season_Stats.Defense_Stats.Run_for_Loss}" />
                                                <GridViewColumn Header="Forced Fumbles" Width="115" DisplayMemberBinding="{Binding Path=Regular_Season_Stats.Defense_Stats.Forced_Fumble}" />
                                            </GridView>
                                        </ListView.View>
                                    </ListView>
                                        <Label Name="lblDefenseNoStats" HorizontalContentAlignment="Center" Style="{StaticResource NormallblBlackstyle}" Content="No Defense Stats"></Label>

                                        <Label Name="lblPassDefense" Style="{StaticResource MedLabelBlackstyle}" Content="Pass Defense"></Label>
                                        <ListView Name="lstPassDefense" Style="{StaticResource PlayerStatHistoryGridStyle}" SelectionMode="Single" Width="580">
                                        <ListView.ItemContainerStyle>
                                            <Style TargetType="ListViewItem">
                                                <Setter Property="Focusable" Value="false"/>
