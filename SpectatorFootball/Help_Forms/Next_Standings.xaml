<Window x:Class="SpectatorFootball.Help_Forms.Next_Standings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpectatorFootball.Help_Forms"
        mc:Ignorable="d"
        Height="190" Width="300" WindowStyle="none" ResizeMode="NoResize" ShowInTaskbar="False" Topmost="True">
    <Border Style="{StaticResource popupBD}" BorderThickness="1">
        <StackPanel Style="{StaticResource popupSP}" Height="180" Width="290" Orientation="Vertical" >
            <Label Style="{StaticResource popupTT}" HorizontalAlignment="Center">Next Step</Label>
            <TextBlock Style="{StaticResource HelpTB}" Name="txtNextContent" TextWrapping="Wrap" Width="270" Height="100" Margin="5,5,5,0" >
            </TextBlock>
            <Button Name="Next_close" Style="{StaticResource appSubmitStyle}" Click="Next_Click" >Close</Button>
        </StackPanel>
    </Border>

</Window>

